---
const { categoria } = Astro.props;
import { trabajos } from "../trabajos";
---

<article id="tour-container" class="mt-20">
  <div class="w-full flex justify-between items-center">
    <h2 class="text-3xl font-semibold py-4">{categoria.nombre}</h2>
    <span class="border-b-2 border-black flex-1 ml-4"></span>
  </div>
  <div class="grid grid-cols-5 gap-4">
    {
      categoria.tours.map((id) => (
        <a href={`/tours/${id}`}>
          <picture
            id={id}
            class="h-[250px] border border-gray-300 rounded-xl my-shadow-outline overflow-hidden relative cursor-pointer  hover:scale-110 transition-transform duration-500"
          >
            <img
              class="w-full h-full object-cover"
              src={trabajos[id].portada}
              alt={`tour ${id}}`}
              title={`tour_${id}}`}
              loading="lazy"
              decoding="async"
            />
          </picture>
        </a>
      ))
    }
  </div>
</article>

<style>
  picture::before {
    position: absolute;
    content: "Ver 360ยบ";
    color: white;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    font-weight: bold;
    font-size: 2rem;
    inset: 0;
    top: 77%;
    background: linear-gradient(to top, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0));
    transition:
      background 0.35s ease,
      color 0.35s ease;
  }
  picture:hover::before {
    background: transparent;
    color: transparent;
  }
</style>
