---
import { trabajos } from "../trabajos";
---

<section class="mt-20">
  <h2 class="text-4xl sm:text-3xl font-bold py-4 mb-8 border-b border-gray-500">
    Fine Art & Minimalismo
  </h2>
  <div class="grid grid-cols-2 xl:grid-cols-4 gap-4">
    {
      trabajos["mini01"].galeria.map((foto) => (
        <img
          class="aspect-[3/4] w-full border border-gray-300 rounded-lg"
          src={foto}
          alt={`imagen de ${foto}`}
          loading="lazy"
          decoding="async"
        />
      ))
    }
  </div>
  <div class="grid grid-cols-2 xl:grid-cols-4 gap-4">
    {
      trabajos["mini01"].galeria.map((foto) => (
        <img
          class="aspect-[3/4] w-full border border-gray-300 rounded-lg"
          src={foto}
          alt={`imagen de ${foto}`}
          loading="lazy"
          decoding="async"
        />
      ))
    }
  </div>
  <div class="mt-4 w-full sm:w-[49.5%] mx-auto">
    <img
      class="w-full object-cover border border-gray-300 rounded-lg"
      src={"./assets/gallery/Minimalismo/minimal13.webp"}
      alt={`imagen de bigsix`}
      loading="lazy"
      decoding="async"
    />
  </div>
</section>
