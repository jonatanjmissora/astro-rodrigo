---
import Lista from "./03_Experiencia_Lista.astro";
const habilidades = [
  "Tours Virtuales 360",
  "Fotografía para inmobiliarias",
  "Avance de obra",
  "Empresas",
  "Particulares",
  "Artística Fine Art",
  "Minimalista",
  "Renders arquitectónicos y 3D",
  "Diseño y desarrollo de páginas web",
];
const laborales = [
  "Punto Alem Eventos",
  "Hotel Orion",
  "Moto Manía",
  "Casali Propiedades",
  "Dexter",
  "Top 5",
  "Top 6",
  "I.A.G.R.O. Inmobiliaria",
  "Ragazzi Vaquería",
  "Teknomanía",
];
---

<article class="mt-36">
  <h2 class="text-3xl w-full py-4 my-8 border-b-2 border-black font-extrabold">
    Mi Experiencia
  </h2>
  <picture class="w-full h-25">
    <img
      class="h-full w-full object-cover"
      src="/assets/hero2.webp"
      alt="hero2 image"
    />
  </picture>
  <article class="my-8 flex gap-16 w-full">
    <Lista array={habilidades} title="Habilidades" />
    <Lista array={laborales} title="Experiencia laboral" />
  </article>
</article>
