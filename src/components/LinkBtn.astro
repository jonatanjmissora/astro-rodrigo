---
const { href, text, className } = Astro.props;
---

<a
  class=`hover px-6 pt-3 pb-2.5 rounded-3xl text-xl font-semibold bg-[var(--primary)] text-white my-shadow-btn ${className}`
  href={href}>{text}</a
>

<style>
  a {
    transition: background 0.3s ease;
  }
  a:hover {
    background: var(--hover);
  }
</style>
