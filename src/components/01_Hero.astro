---
import LinkBtn from "./LinkBtn.astro";
---

<section id="inicio" class="h-[75vh] flex justify-center items-center relative">
  <div class="relative w-[40%] h-full">
    <div class="w-full h-full">
      <h1 class="absolute top-[48%] -translate-y-1/2 text-[7rem] -left-1">
        Rodrigomphotos
      </h1>
      <h2
        class="w-max text-3xl font-medium border-t-2 border-[#a0a0a0] pt-2 tracking-wide absolute bottom-1/3"
      >
        Fotografía Arquitectónica
      </h2>

      <a
        href="#contact"
        class="absolute bottom-[10%] text-3xl font-bold text-white bg-blue-500 rounded-[2rem] py-4 px-8 hover:bg-blue-700 my-shadow-outline"
        >Contacto</a
      >
    </div>
  </div>
  <picture class="h-full w-[60%]">
    <img
      class="h-full w-full object-cover rounded-lg"
      src="/assets/hero.webp"
      alt="portada 1"
      loading="lazy"
      decoding="async"
    />
  </picture>
</section>
