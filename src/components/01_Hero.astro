---
import LinkBtn from "./LinkBtn.astro";
---

<section id="inicio" class="h-[50vh] w-full sm:h-[75vh] flex justify-between">
  <div class="relative w-[40%] h-full">
    <h1
      class="absolute z-10 top-[42%] sm:top-[34%] text-[8.5vw] sm:text-[6.75rem] font-semibold sm:font-medium animate-fade-up animate-once animate-duration-[1000ms] animate-ease-out"
    >
      Rodrigomphotos
    </h1>
    <h2
      class="w-full text-2xl sm:text-[2rem] font-medium border-t border-gray-500 pt-2 tracking-wide absolute bottom-1/3 animate-fade-up animate-once animate-duration-[1000ms] animate-ease-out animate-delay-[250ms]"
    >
      Fotografía Arquitectónica
    </h2>

    <a
      href="/#contact"
      class="absolute bottom-[10%] text-2xl sm:text-3xl font-bold text-white bg-blue-500 rounded-[2rem] py-4 px-8 ml-2 hover:bg-blue-700 my-shadow-outline animate-fade-up animate-once animate-duration-[1000ms] animate-ease-out animate-delay-[500ms]"
      >Contacto</a
    >
  </div>
  <picture
    class="sm:h-full relative -z-10 w-[60%] animate-fade-left animate-once animate-duration-[1000ms] animate-ease-out animate-delay-500"
  >
    <img
      class="h-full w-full object-cover object-center rounded-lg"
      src="/assets/hero.webp"
      alt="portada 1"
      loading="lazy"
      decoding="async"
    />
  </picture>
</section>
