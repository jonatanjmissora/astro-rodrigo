---
import LinkBtn from "../components/LinkBtn.astro";
import PhoneSvg from "../components/icons/PhoneSvg.astro";
import MailSvg from "../components/icons/MailSvg.astro";
import FacebookSvg from "../components/icons/FacebookSvg.astro";
import InstagramSvg from "../components/icons/InstagramSvg.astro";
import WhatsappSvg from "../components/icons/WhatsappSvg.astro";
import ContactPill from "../components/ContactPill.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="RM | Contacto">
  <section class="w-[75vw] mx-auto mt-10 h-screen grid place-items-center">
    <div>
      <div class="flex justify-center items-center">
        <picture class="h-[70vh]"
          ><img
            class="w-full h-full object-cover rounded-lg"
            src="/assets/contact1.webp"
            alt=""
          /></picture
        >
        <!-- LADO DERECHO -->
        <div class="w-1/2">
          <!-- FRASE -->
          <p class="font-medium leading-relaxed text-2xl px-16">
            "Me fascina mi trabajo e intento transmitir esta pasi√≥n en cada uno
            de los proyectos que realizo"
          </p>

          <!-- IMAGEN -->
          <div class="w-1/3 mx-auto my-8">
            <img
              class="w-full h-full object-cover"
              src="/assets/contact2.webp"
              alt=""
            />
          </div>

          <div class="flex justify-center gap-12">
            <ContactPill>
              <PhoneSvg
                class="absolute -left-7 h-9 w-9 border-2 border-[var(--white)] rounded-full p-1 bg-[var(--black)]"
              />
               291-5046309
            </ContactPill>
            <ContactPill>
              <PhoneSvg
                class="absolute -left-7 h-9 w-9 border-2 border-[var(--white)] rounded-full p-1 bg-[var(--black)]"
              />
               291-4319025
            </ContactPill>
          </div>

          <div class="flex justify-center gap-12 py-4">
            <ContactPill>
              <MailSvg
                class="absolute -left-7 h-9 w-9 border-2 border-[var(--white)] rounded-full p-1 bg-[var(--black)]"
              />
               rodrigomm.81@gmail.com
            </ContactPill>
          </div>

          <div class="flex w-full justify-center items-center gap-8">
            <FacebookSvg
              class="w-10 h-10 text-[var(--black)] hover:text-blue-400 hover:scale-110 transition-all duration-300"
            />
            <InstagramSvg
              class="w-11 h-11 text-[var(--black)] hover:text-blue-400 hover:scale-110 transition-all duration-300"
            />
            <WhatsappSvg
              class="w-10 h-10 text-[var(--black)] hover:text-blue-400 hover:scale-110 transition-all duration-300"
            />
          </div>
        </div>
      </div>

      <div class="w-full mt-16 grid justify-center">
        <LinkBtn href="/" text="Inicio" />
      </div>
    </div>
  </section>
</Layout>
