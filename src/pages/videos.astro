---
import LinkBtn from "../components/LinkBtn.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="RM | Video">
  <section class="w-[75vw] h-screen relative mx-auto mt-20">
    <h2 class="text-3xl font-semibold">Videos 360</h2>
    <video
      class="min-h-[390px] bg-black/10 mt-16 rounded-lg my-shadow-outline"
      src="https://firebasestorage.googleapis.com/v0/b/rodrigo-videos.appspot.com/o/VIDEOS%2FALBA%2Falba.mp4?alt=media&"
      width="315"
      height="315"
      autoplay=""
      muted
      loop=""></video>
    <div class="w-full my-16 grid justify-center absolute bottom-20 left-0">
      <LinkBtn href="/" text="Inicio" />
    </div>
  </section>
</Layout>

